<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>gov.hhs.samhsa.ds4p</groupId>
    <artifactId>ds4p-sender</artifactId>
    <version>1.0</version>
  </parent>
  <groupId>gov.va.ds4p</groupId>
  <artifactId>secured-context-handler</artifactId>
  <name>secured-context-handler</name>
  <url>http://maven.apache.org</url>
    <build>
        <resources>
            <resource>
                <targetPath>META-INF</targetPath>
                <directory>src</directory>
                <includes>
                    <include>jax-ws-catalog.xml</include>
                    <include>wsdl/**</include>
                </includes>
            </resource>
        </resources>
        <plugins>
        
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		
            <plugin>
                <groupId>org.jvnet.jax-ws-commons</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>75.145.119.97/XACMLPolicyEvaluationService/soap.wsdl</wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>http://75.145.119.97/XACMLPolicyEvaluationService/soap?wsdl</wsdlLocation>
                            <staleFile>${project.build.directory}/jaxws/stale/soap.stale</staleFile>
                        </configuration>
                        <id>wsimport-generate-soap</id>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.sun.xml.ws</groupId>
                        <artifactId>jaxws-tools</artifactId>
                        <version>2.2.7</version>                   
                    </dependency>
                </dependencies>
                <configuration>
                    <sourceDestDir>${project.build.directory}/generated-sources/jaxws-wsimport</sourceDestDir>
                    <xnocompile>true</xnocompile>
                    <verbose>true</verbose>
                    <extension>true</extension>
                    <target>2.0</target>
                    <catalog>${basedir}/src/jax-ws-catalog.xml</catalog>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>gov.hhs.samhsa.ds4p</groupId>
      <artifactId>xdsb-registry-client</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>gov.hhs.samhsa.ds4p</groupId>
      <artifactId>xdsb-repository-client</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
            <groupId>com.sun.xml.wss</groupId>
            <artifactId>xws-security</artifactId>
            <version>3.0</version>
    </dependency>
    <dependency>
	<groupId>javax.xml.crypto</groupId>
	<artifactId>xmldsig</artifactId>
	<version>1.0</version>
    </dependency>
      <dependency>
          <groupId>gov.hhs.samhsa.ds4p</groupId>
          <artifactId>common-library</artifactId>
          <version>1.0</version>
      </dependency>
    <dependency>
      <groupId>gov.hhs.samhsa.ds4p</groupId>
      <artifactId>context-handler-client</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.7</version>
    </dependency>
    <dependency>
      <groupId>gov.hhs.samhsa.ds4p</groupId>
      <artifactId>audit-service-client</artifactId>
      <version>1.0</version>
    </dependency>
  </dependencies>
</project>
