 </RefrainPolicy>
 <RefrainPolicy code="NOINTEGRATE" codeSystem="2.16.840.1.113883.1.11.20446" codeSystemName="www.hl7.org" codeSystemVersion="3.0"
  displayName="NOINTEGRATE">
  <Description>Prohibition on Integration into other records</Description>
 </RefrainPolicy>
 <RefrainPolicy code="NOLIST" codeSystem="2.16.840.1.113883.1.11.20446" codeSystemName="www.hl7.org" codeSystemVersion="3.0"
